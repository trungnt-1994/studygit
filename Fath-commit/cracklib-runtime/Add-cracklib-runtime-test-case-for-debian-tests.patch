+#!/bin/sh
+
+set -e
+
+pkg=cracklib-runtime
+
+if [ "$ADTTMP" = "" ] ; then
+  ADTTMP=`mktemp -d /tmp/${pkg}-test.XXXXXX`
+fi
+
+cd $ADTTMP
+
+echo "====Start cracklib-packer===="
+
+wordlist=wordlist.txt
+
+cat << EOF > $wordlist
+lifetime	elsewhere	upside	grandmother
+cannot	baseball	fireworks	passport
+together	become	became	sunflower
+EOF
+
+words=$(cracklib-format $wordlist)
+line1=$(echo $words | cut -d' ' -f1)
+line2=$(echo $words | cut -d' ' -f2)
+line3=$(echo $words | cut -d' ' -f3)
+
+packer_init=packer
+
+cracklib-packer $packer_init <<EOF
+$line1
+$line2
+$line3
+EOF
+
+pass_check_words=$(cracklib-unpacker $packer_init)
+
+for w in $pass_check_words
+do
+  expected_message=$w": it is based on a dictionary word"
+  output_message=$(echo "$w" | cracklib-check $packer_init)
+  if [ ! "$expected_message" = "$output_message" ]; then
+     exit 1
+  fi
+done
+
+echo "PASS"
+
+echo "====Done===="
