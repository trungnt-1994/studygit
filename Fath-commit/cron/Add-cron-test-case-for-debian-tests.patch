+#!/bin/sh
+
+set -e
+
+#Package name here
+pkg=cron
+
+if [ "$ADTTMP" = "" ] ; then
+  ADTTMP=`mktemp -d /tmp/${pkg}-test.XXXXXX`
+fi
+
+cd $ADTTMP
+
+echo "====Start $pkg===="
+
+log_file=$pkg".log"
+cron_job=cron_job.txt
+cron_output=$PWD/cron_output
+
+#stop cron service anyway
+/etc/init.d/cron stop > $log_file
+
+cat << EOF > $cron_job
+* * * * * ls /tmp > $cron_output 2>&1
+EOF
+
+#create crontab will execute command into $cron_job
+crontab $cron_job
+#start cron service
+/etc/init.d/cron start > $log_file
+
+echo "Waiting cron service will take a few minutes. Don't stop!"
+sleep 1m
+
+expected_output=$PWD/expected_output
+ls /tmp > $expected_output 2>&1
+
+diff $expected_output $cron_output >> $log_file 2>&1
+
+echo "PASS"
+
+echo "====Done===="
