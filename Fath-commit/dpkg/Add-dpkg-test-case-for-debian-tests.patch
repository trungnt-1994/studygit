+#!/bin/sh
+
+set -e
+
+#Package name here
+pkg=dpkg
+
+if [ "$ADTTMP" = "" ] ; then
+  ADTTMP=`mktemp -d /tmp/${pkg}-test.XXXXXX`
+fi
+
+cd debian/tests/
+
+export build_pkg_name="hello"
+export build_hello_folder="hello-1.0"
+export work_dir="$ADTTMP"
+build_file=build_data
+build_hello_deb=$build_hello_folder".deb"
+if [ ! -x $build_file ]; then
+  chmod +x $build_file
+fi
+./$build_file
+cd $ADTTMP
+
+echo "====Start $pkg===="
+
+log_file=$pkg".log"
+
+dpkg -b $build_hello_folder > $log_file 2>&1
+ls | grep "$build_hello_deb" > $log_file 2>&1
+echo "PASS"
+
+dpkg -I "$build_hello_deb" | grep "Description: Test dpkg" > $log_file 2>&1
+echo "PASS"
+
+dpkg -i $build_hello_deb > $log_file 2>&1
+echo "PASS"
+
+hello_command_testing=$(hello); hello_command_expected="Hello, World!"
+if [ "$hello_command_testing" = "$hello_command_expected" ]; then
+  echo "PASS"
+else
+  exit 1
+fi
+
+dpkg -r hello $build_pkg_name > $log_file
+echo "PASS"
+
+echo "====Done===="
