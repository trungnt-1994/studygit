+#!/bin/sh
+
+set -e
+
+#Package name here
+pkg=ethtool
+
+if [ "$ADTTMP" = "" ] ; then
+  ADTTMP=`mktemp -d /tmp/${pkg}-test.XXXXXX`
+fi
+
+cd $ADTTMP
+
+echo "====Start $pkg===="
+
+log_file=$pkg".log"
+ethernet_interface=eth0
+
+if [ "$(find /sys/class/net/ -name $ethernet_interface)" = "/sys/class/net/$ethernet_interface" ]; then
+  exp_output="firmware-version"
+  sudo ethtool -i $ethernet_interface > $log_file
+  grep -q "$exp_output" $log_file
+  echo "PASS"
+else
+  echo "Error: cannot reaching for $ethernet_interface directory!"
+  exit 1
+fi
+
+echo "====Done===="
