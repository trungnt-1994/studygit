+#!/bin/sh
+
+set -e
+
+#Checking for autopkgtest dir, where tests script run on
+if [ -z "$ADTTMP" ]
+then
+        echo "Required envvar \"$ADTTMP\"is not set" >&2
+        exit 1
+fi
+
+cd $ADTTMP
+
+echo "===Start xinetd==="
+
+#Create xinetd config file
+cat << EOF > xinetd.conf
+defaults
+{
+        instances               = 60
+        log_type                = SYSLOG authpriv
+        log_on_success          = HOST PID
+        log_on_failure          = HOST
+        cps                     = 25 30
+}
+
+includedir /etc/xinetd.d
+EOF
+
+cp -f xinetd.conf /etc/xinetd.conf #Apply xinetd config file
+
+/etc/init.d/xinetd start #Start xinetd service
+sleep 2
+
+/etc/init.d/xinetd status > xinetd_status.log 2>&1 #Get xinetd status
+grep -q "is running" xinetd_status.log #Check for xinetd running or not(Now pass if running, fail if not)
+
+echo "PASS"
+
+/etc/init.d/xinetd stop #Stop xinetd service
+sleep 2
+
+echo "PASS"
+
+echo "===Stop xinetd==="
