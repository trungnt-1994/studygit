+#!/bin/sh
+
+#
+# Testing for binfmt-support command.
+# Start, stop and restart binfmt-support service.
+# Enable and disable all binary formats. 
+#
+
+set -e 
+
+echo "--------------------------------"
+echo "Testing for binfmt-support command"
+echo "--------------------------------"
+echo
+
+echo "--------------------------------"
+echo "Start binfmt-support service"
+echo "--------------------------------"
+service binfmt-support start
+echo "-----------------------------------"
+echo "Start binfmt-support service SUCCESS"
+echo "-----------------------------------"
+echo
+
+echo "--------------------------------"
+echo "Stop binfmt-support service"
+echo "--------------------------------"
+service binfmt-support stop
+echo "-----------------------------------"
+echo "Stop binfmt-support service SUCCESS"
+echo "-----------------------------------"
+echo
+
+echo "--------------------------------"
+echo "Restart binfmt-support service"
+echo "--------------------------------"
+service binfmt-support restart
+echo "-----------------------------------"
+echo "Restart binfmt-support service SUCCESS"
+echo "-----------------------------------"
+echo
+
+echo "--------------------------------"
+echo "Enable all known binary formats"
+echo "--------------------------------"
+update-binfmts --enable
+echo "-----------------------------------"
+echo "Enable all known binary formats SUCCESS"
+echo "-----------------------------------"
+echo
+
+echo "--------------------------------"
+echo "Disable all known binary formats"
+echo "--------------------------------"
+update-binfmts --disable
+echo "-----------------------------------"
+echo "Disable all known binary formats SUCCESS"
+echo "-----------------------------------"
+echo
+
+echo "--------------------------------"
+echo "Re-enable all known binary formats"
+echo "--------------------------------"
+update-binfmts --enable
+echo "-----------------------------------"
+echo "Re-enable all known binary formats SUCCESS"
+echo "-----------------------------------"
+echo
+
