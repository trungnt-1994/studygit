+#!/bin/sh
+
+set -e
+
+#Package name here
+pkg=gettext
+
+if [ "$ADTTMP" = "" ] ; then
+  ADTTMP=`mktemp -d /tmp/${pkg}-test.XXXXXX`
+fi
+
+cd $ADTTMP
+
+echo "====Start $pkg===="
+
+log_file=$pkg".log"
+output_exp="anythings"
+
+cat >hellogt.cxx <<EOF
+// hellogt.cxx
+#include <libintl.h>
+#include <locale.h>
+#include <iostream>
+int main (){
+    setlocale(LC_ALL, "");
+    bindtextdomain("hellogt", ".");
+    textdomain( "hellogt");
+    std::cout << gettext("hello, world!") << std::endl;
+}
+EOF
+
+g++ -o hellogt hellogt.cxx > $log_file 2>&1
+xgettext --package-name hellogt --package-version 1.2 --default-domain hellogt --output hellogt.pot hellogt.cxx > $log_file 2>&1
+msginit --no-translator --locale es_MX --output-file hellogt_spanish.po --input hellogt.pot > $log_file 2>&1
+sed --in-place hellogt_spanish.po --expression='/"hello, world!"/,/#: / s/""/"anythings"/'
+mkdir --parents ./es_MX.utf8/LC_MESSAGES > $log_file 2>&1
+msgfmt --check --verbose --output-file ./es_MX.utf8/LC_MESSAGES/hellogt.mo hellogt_spanish.po > $log_file 2>&1
+LANGUAGE=es_MX.utf8 ./hellogt > $log_file 2>&1
+
+grep -q $output_exp $log_file
+echo "PASS"
+
+echo "====Done===="
