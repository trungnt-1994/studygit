+#!/bin/sh
+
+set -e 
+
+pkg=bind9
+
+if [ "$ADTTMP" = "" ] ; then
+  ADTTMP=`mktemp -d /tmp/${pkg}-test.XXXXXX`
+fi
+
+cd $ADTTMP
+
+echo "====Start bind9===="
+
+log_file=$pkg".log"
+
+service bind9 start > $log_file 2>&1
+sleep 2
+service bind9 status > $log_file 2>&1
+grep -q 'Active: active (running)\|bind9 is running.' $log_file
+echo "PASS"
+
+service bind9 stop > $log_file 2>&1
+sleep 2
+service bind9 status > $log_file 2>&1 || echo "Ignore warning status!" 
+grep -q 'Active: failed\|bind9 is not running' $log_file
+echo "PASS"
+
+service bind9 restart > $log_file 2>&1
+sleep 2
+service bind9 status > $log_file 2>&1
+grep -q 'Active: active (running)\|bind9 is running.' $log_file
+echo "PASS"
+
+echo "====Done===="
